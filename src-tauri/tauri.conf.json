{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Peeches",
  "version": "0.1.0",
  "identifier": "Peeches",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "transparent": true, 
        "alwaysOnTop": true,
        "decorations": false,
        "acceptFirstMouse": true
      }
    ],
    "security": {
      "capabilities": [
        "default"
      ],
      "csp": null 
    },
    "trayIcon": {
      "iconAsTemplate": false,
      "iconPath": "./icons/icon-template.png",      
      "id": "tray"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources":[
      "model/*"
    ]
  }
}
